{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "build": {
    "env": {
      "ZOLA_VERSION": "0.15.3"
    }
  },
  "buildCommand": "curl -s -L https://github.com/getzola/zola/releases/download/v${ZOLA_VERSION}/zola-${ZOLA_VERSION}-x86_64-unknown-linux-gnu.tar.gz | tar xz && ./zola build"
}